# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.{html, ctp, html.twig, js, css, scss}]
indent_style = tab
indent_size = 4

[{package.json}]
indent_style = tab
indent_size = 4
