{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Audit",
	"description": "Fichier de résultats d'audit RGAA",
	"type": "object",
	"properties": {
		"version-referentiel": {
			"description": "La version du référentiel RGAA utilisé par le fichier",
			"type": "string"
		},
		"criteres": {
			"type": "array",
			"items": {
				"title": "Critère",
				"type": "object",
				"properties": {
					"id": {"type": "string"},
					"priorite": {"type": "string"},
					"recommandation": {"type": "string"},
					"derogation": {"type": "string"},
					"non-conformites": {"type": "string"},
					"propositions": {"type": "string"},
					"commentaires": {"type": "string"},
					"resultat": {"enum": ["nt", "na", "c", "nc"]},
					"tests": {
						"type": "array",
						"items": {
							"title": "Test",
							"type": "object",
							"properties": {
								"id": {"type": "string"},
								"titre": {"type": "string"},
								"resultat": {"enum": ["nt", "na", "c", "nc"]}
							},
							"required": ["id", "resultat"]
						}
					}
				},
				"required": ["id", "resultat"]
			}
		}
	},
	"required": ["version-referentiel", "criteres"]
}
